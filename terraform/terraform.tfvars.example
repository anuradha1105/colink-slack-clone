# Colink Slack Clone - Example Terraform Variables
# Copy this file to terraform.tfvars and customize as needed

# AWS Configuration
aws_region = "ap-south-1"

# Project Configuration
project_name = "colink"
environment  = "production"

# EC2 Instance Configuration
instance_type    = "t3.large"    # Recommended for production
root_volume_size = 50            # GB

# Optional: Create a separate data volume for persistence
create_data_volume = false
data_volume_size   = 100         # GB

# SSH Key Pair
# Option 1: Create a new key pair (provide your public key)
create_key_pair = false
ssh_public_key  = ""             # Your SSH public key content

# Option 2: Use an existing key pair
existing_key_name = "your-existing-key"

# Security Configuration
# Restrict SSH access to specific IPs for better security
ssh_allowed_cidr = ["0.0.0.0/0"]  # Change to your IP: ["1.2.3.4/32"]

# Elastic IP
create_elastic_ip = true

# Application Configuration
github_repo = "https://github.com/darshlukkad/colink-slack-clone.git"
domain_name = ""                  # Optional: your-domain.com
admin_email = "admin@example.com"

# Logging
log_retention_days = 30

# Optional: Provide your own passwords (auto-generated if empty)
# keycloak_admin_password = ""
# postgres_password       = ""
# minio_root_password     = ""

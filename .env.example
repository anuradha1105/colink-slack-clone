# ===============================================
# Colink Environment Configuration
# ===============================================
# Copy this file to .env and update with your values
# DO NOT commit .env to version control!

# -----------------------------------------------
# General
# -----------------------------------------------
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SERVICE_NAME=colink

# -----------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------
DATABASE_URL=postgresql://colink:colink_password@localhost:5432/colink
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# Async database URL (for asyncpg)
ASYNC_DATABASE_URL=postgresql+asyncpg://colink:colink_password@localhost:5432/colink

# -----------------------------------------------
# Redis
# -----------------------------------------------
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# -----------------------------------------------
# Kafka/Redpanda
# -----------------------------------------------
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=colink-services
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_IDEMPOTENCE=true

# -----------------------------------------------
# Keycloak
# -----------------------------------------------
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=colink
KEYCLOAK_CLIENT_ID=web-app
KEYCLOAK_CLIENT_SECRET=change_me_in_production

# Service-to-service client
KEYCLOAK_SERVICE_CLIENT_ID=service-internal
KEYCLOAK_SERVICE_CLIENT_SECRET=change_me_in_production

# -----------------------------------------------
# MinIO / S3
# -----------------------------------------------
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET_FILES=colink-files
MINIO_BUCKET_AVATARS=colink-avatars

# For production (AWS S3)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET_FILES=colink-files-prod

# -----------------------------------------------
# OpenSearch
# -----------------------------------------------
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_INDEX_MESSAGES=messages
OPENSEARCH_INDEX_FILES=files
OPENSEARCH_INDEX_USERS=users

# -----------------------------------------------
# ClamAV (Antivirus)
# -----------------------------------------------
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# -----------------------------------------------
# JWT / Security
# -----------------------------------------------
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# For local JWT signing (dev only, use Keycloak in prod)
# JWT_SECRET_KEY=your-secret-key-min-32-chars-change-in-production

# -----------------------------------------------
# CORS
# -----------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# -----------------------------------------------
# Rate Limiting
# -----------------------------------------------
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# -----------------------------------------------
# Service Ports
# -----------------------------------------------
AUTH_PROXY_PORT=8001
USERS_SERVICE_PORT=8002
CHANNELS_SERVICE_PORT=8003
MESSAGING_SERVICE_PORT=8004
THREADS_SERVICE_PORT=8005
REACTIONS_SERVICE_PORT=8006
PRESENCE_SERVICE_PORT=8007
FILES_SERVICE_PORT=8008
SEARCH_SERVICE_PORT=8009
ADMIN_SERVICE_PORT=8010
REALTIME_GATEWAY_PORT=8011

# -----------------------------------------------
# Observability
# -----------------------------------------------
PROMETHEUS_PORT=9090
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
ENABLE_TRACING=true
ENABLE_METRICS=true

# -----------------------------------------------
# File Upload Limits
# -----------------------------------------------
MAX_FILE_SIZE_MB=100
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# -----------------------------------------------
# Idempotency
# -----------------------------------------------
IDEMPOTENCY_KEY_TTL_SECONDS=86400  # 24 hours

# -----------------------------------------------
# WebSocket
# -----------------------------------------------
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_TIMEOUT=60

# -----------------------------------------------
# Presence & Typing
# -----------------------------------------------
PRESENCE_TTL_SECONDS=60
TYPING_TTL_SECONDS=5

# -----------------------------------------------
# Pagination
# -----------------------------------------------
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100

# -----------------------------------------------
# Development Tools
# -----------------------------------------------
HOT_RELOAD=true
AUTO_RELOAD=true
